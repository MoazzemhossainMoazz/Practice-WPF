        <Label Grid.Row="1">Email: </Label>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,5,10"/>
        <Label Grid.Row="2">Comment: </Label>
        <TextBox Grid.Row="2" Grid.Column="1" AcceptsReturn="True" Margin="0,0,5,10"/>
