<Window x:Class="Access_Keys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Access_Keys"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!--<Grid>
        <Button Content="_New"></Button>
    </Grid>-->

    <StackPanel Margin="50">
        <Label Content="First name:" Target="{Binding ElementName=txtFirstName}" />
        <TextBox Name="txtFirstName"/>
        <Label Content="Last name:" Target="{Binding ElementName=txtLastName}" />
        <TextBox Name="txtLastName"/>
        <Button Content="_Save" Margin="20"></Button>

    </StackPanel>
</Window>
